<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.uw.medhas.mhealthsecurityframework.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Database Storage - TypeConverter"
            android:textSize="26dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/dbTcSensitiveIntInp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Some Sensitive Integer Data"
            android:inputType="text" />

        <EditText
            android:id="@+id/dbTcSensitiveLongInp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Some Sensitive Long Data"
            android:inputType="text" />

        <EditText
            android:id="@+id/dbTcSensitiveFloatInp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Some Sensitive Float Data"
            android:inputType="text" />

        <EditText
            android:id="@+id/dbTcSensitiveDoubleInp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Some Sensitive Double Data"
            android:inputType="text" />

        <EditText
            android:id="@+id/dbTcSensitiveStringInp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Some Sensitive String Data"
            android:inputType="text" />

        <Button
            android:id="@+id/dbTcStore"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Store"
            android:layout_marginBottom="60dp" />

        <TextView
            android:id="@+id/dbTcSensitiveOp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/dbTcRetrieve"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Retrieve"
            android:layout_marginBottom="60dp" />

    </LinearLayout>

</LinearLayout>
