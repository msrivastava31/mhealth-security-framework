<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.uw.medhas.mhealthsecurityframework.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ACL - Privilege"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/aclPrivilegeUser"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="User"
            android:inputType="text" />

        <EditText
            android:id="@+id/aclPrivilegeRole"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Role"
            android:inputType="text" />

        <EditText
            android:id="@+id/aclPrivilegeResource"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Resource"
            android:inputType="text" />

        <EditText
            android:id="@+id/aclPrivilegeOperation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Operation"
            android:inputType="text" />

        <EditText
            android:id="@+id/aclPrivilegeCurrentUser"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Current User id"
            android:inputType="text" />

        <Button
            android:id="@+id/aclPrivilegeAssign"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Assign Role"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/aclPrivilegeCreate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Create Privilege"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/aclPrivilegeDelete"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Delete Privilege"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/aclPrivilegeCheck"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Check Authorization"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/aclPrivilegeOp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

</LinearLayout>
